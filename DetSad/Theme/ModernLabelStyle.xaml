<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Label}" x:Key="ModernLabelStyle">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
    </Style>

    <Style TargetType="{x:Type Label}" x:Key="ModernLabelMedStyle">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="#0079D1"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
    </Style>

    <Style TargetType="{x:Type Label}" x:Key="ModernLabelContrStyle">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Foreground" Value="#0079D1"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
    </Style>
</ResourceDictionary>