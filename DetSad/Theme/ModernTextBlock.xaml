<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--текстБлок для старта-->
    <Style TargetType="{x:Type TextBlock}" x:Key="ModernTextBlockStart">
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--текстБлок для данных календаря-->
    <Style TargetType="{x:Type TextBlock}" x:Key="ModernTextBlockCalendar">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#0079D1"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--текстБлок для данных названия-->
    <Style TargetType="{x:Type TextBlock}" x:Key="ModernTextBlockCalendarNames">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>